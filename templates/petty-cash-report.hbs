

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Petty Cash Report</title>
    {{> reset}}
    {{> pettyCashStyle}}
  </head>
  <body>
    <main>
      <header>
        <h1>Petty Cash Report</h1>
      </header>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Description</th>
              <th>Debit</th>
              <th>Credit</th>
              <th>Balance</th>
            </tr>
          </thead>

          <tbody>
            {{#each transactions}}
              <tr>
                <td class="center date">{{this.date}}</td>
                <td class="description">{{this.newDescription}}</td>
                {{#if this.isOutgoing}}
                  <td class="debit right">{{formatRP this.absAmount}}</td>
                  <td class="center">-</td>
                {{/if}}
                {{#if this.isIncoming}}
                  <td class="center">-</td>
                  <td class="credit right">{{formatRP this.absAmount}}</td>
                {{/if}}
                
                <td class="right">{{formatRP this.balance}}</td>
              </tr>
            {{/each}}

            
          </tbody>
        </table>
      </div>
    </main>
  </body>
</html>
